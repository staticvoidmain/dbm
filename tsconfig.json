{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "es2015",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types" : [ "node", "core-js" ]
    },
    "typeRoots": [ "node_modules/@types" ],
    "include": [
        "lib/**/*",
        "tasks/**/*",
        "views/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.js"
    ]
}